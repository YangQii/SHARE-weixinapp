/**index.wxss**/

page {
  background-color: #eee;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 220px;
}

.index_menu_box {
  width: 90%;
  height: 100px;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 10px;
  margin-bottom: 10px;
}

.index_menu_left {
  width: 50%;
  height: 100px;
  line-height: 30px;
  text-align: center;
  font-family: "Microsoft Yahei";
  font-size: 20px;
  color: #000;
  float: left;
}

.index_menu_right {
  width: 50%;
  height: 100px;
  float: right;
  background-color: #00a1e9;
}

.index_menu_img {
  width: 100%;
  height: 100px;
}

.index_menu_t {
  font-family: "Microsoft Yahei";
  font-size: 20px;
  color: #fff;
  position: absolute;
  margin-top: -90px;
  margin-left: 40px;
}

.index_btn_box {
  width: 90%;
  height: 100px;
  margin-top: 80px;
  background-color: #fff;
  margin: 0 auto;
}

.index_btn_li {
  width: 20%;
  height: 100px;
  float: left;
}

.index_btn_li:active {
  background-color: #eee;
}

.index_btn_li_top {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-family: "Microsoft Yahei";
  font-size: 12px;
  color: #000;
}

.index_btn_li_bottom {
  width: 100%;
  height: 60px;
}

.index_btn_img {
  width: 100%;
  height: 100%;
}

.index_plane {
  width: 90%;
  height: 80px;
  background-color: #fff;
  margin: 0 auto;
  margin-bottom: 10px;
  margin-top: 10px;
}

.index_plane_li {
  width: 25%;
  height: 80px;
  float: left;
  color: #000;
}

.index_plane_li:active {
  background-color: #f9f9f9;
  color: #00a3ed;
}

.index_p_l_a {
  width: 100%;
  height: 20px;
  line-height: 30px;
  text-align: center;
  font-family: "Microsoft Yahei";
  font-size: 10px;
}

.index_p_l_ico {
  width: 70%;
  height: 65%;
  margin-left: 15%;
}

.chooseSection {
  margin-bottom: 25px;
  margin-left: 15px;
}

.on_choose {
  font-family: "Microsoft Yahei";
}

.section {
  margin: 20px;
}

.btnStyle {
  margin-top: 50px;
}
.pointStyle{
  font-size: 20px;
  color: #3bafe3;
}